extends ./layouts/main-layout.pug

block styles    
    link(rel="stylesheet", href="")

block content

    form(action="/save" method="post" id="formulario") 
        //- nombre
        label(for="nombre") Nombre:
        input(type="text" id="nombre" name="nombre")
        br
        //- edad
        label(for="edad") Edad:
        input(type="number" id="edad" name="edad")
        br
        //- genero
        label(for="genero") Género: 
        select#genero(name="genero")
            option(value="M") M
            option(value="F") F
        br
        //- email
        label(for="email") Email:
        input(type="email" id="email" name="email")
        br
        //- profesion
        label(for="profesion") Profesión:
        input(type="text" id="profesion" name="profesion")
        br
        //- salario
        label(for="salario") Salario:
        input(type="text" id="salario" name="salario")
        br
        //- nroTelef
        label(for="nroTelef") Teléfono:
        input(type="text" id="nroTelef" name="nroTelef")
        br

        button Guardar

    if error
        p #{message}